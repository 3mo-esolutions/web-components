		"@storybook/builder-webpack5": "6.x",
		"@storybook/manager-webpack5": "6.x",
		"@storybook/web-components": "6.x",
		"@types/jasmine": "x",
		"@typescript-eslint/eslint-plugin": "x",
		"@typescript-eslint/parser": "x",
		"concurrently": "x",
		"del-cli": "x",
		"eslint": "x",
		"eslint-plugin-import": "x",
		"eslint-plugin-lit": "x",
		"html-webpack-plugin": "x",
		"karma": "x",
