{
	"scripts": {
		"start": "npm run clean && npm install && start-storybook -p 3000",
		"test": "npm install && webpack --config ./webpack.config.test.mjs && concurrently --raw \"webpack --watch --config ./webpack.config.test.mjs\" \"karma start\" --restart-tries -1",
		"test:ci": "webpack --config ./webpack.config.test.mjs && karma start --single-run",
		"docs:build": "build-storybook -o docs-dist",
		"clean": "node ./scripts/clean.mjs",
		"release": "node ./scripts/release.mjs",
		"analyze": "cem analyze --globs \"packages/**/*.ts\" --exclude \"packages/**/*.(stories|test).ts\" --litelement"
	},
	"workspaces": [
		"./packages/*"
	],
	"devDependencies": {
		"@a11d/eslint-config": "x",
